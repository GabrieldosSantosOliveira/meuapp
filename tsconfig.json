{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/app/*": ["./src/app/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/interface/*": ["./src/interface/*"],
      "@/main/*": ["./src/main/*"],
      "@/test/*": ["./test/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  }
}
